    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Launch Program",
            "type": "node",
            "program": "${workspaceFolder}/src/notes.ts",
            "cwd": "${workspaceFolder}/src",
            "env": {},
            "runtimeExecutable": "/usr/local/bin/deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-all"
            ],
            "attachSimplePort": 9229,
            "args": [
                "build",
                "from",
                "to"
            ]
        },
        {
            "name": "Debug Deno Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/configuration.test.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "test",
                "--inspect-brk",
                "--allow-read",
                "--allow-write",
                "--allow-net",
                "--allow-env"
            ],
            "attachSimplePort": 9229
        }
    ]
}