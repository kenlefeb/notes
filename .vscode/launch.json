{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Launch Program",
            "type": "node",
            "program": "${workspaceFolder}/mod.ts",
            "cwd": "${workspaceFolder}",
            "env": {
                "xUSERPROFILE": "${workspaceFolder}\\data"
            },
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-all"
            ],
            "attachSimplePort": 9229,
            "args": [
                "daily",
                "add",
                "--debug"
            ]
        },
        {
            "name": "Debug Deno Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/tests",
            "cwd": "${workspaceFolder}",
            "env": {
                "USERPROFILE": "${workspaceFolder}\\data"
            },
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "test",
                "--inspect-brk",
                "--allow-all"
            ],
            "attachSimplePort": 9229,
            "outputCapture": "std",
            "console": "integratedTerminal"
        }
    ]
}